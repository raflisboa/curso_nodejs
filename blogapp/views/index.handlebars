{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="jumbotron">
  <h1 class="display-4">Blogapp</h1>
    <p class="lead">Blog resultado do Curso de NodeJS de Victor Lima - Guia do Programador</p>
        <hr class="my-4">
    <p>Projeto realizado por Rafael Lisboa</p>
  <a class="btn btn-primary btn-lg" href="https://www.cursosguiadoprogramador.com/" role="button">Acesse o site do Guia de Programador</a>
  <a class="btn btn-primary btn-lg" href="https://raflisboa.github.io/site/" role="button">Acesse o meu site pessoal</a>
</div>
<hr>
<h2>Postagens Recentes:</h2>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}" class="btn btn-info">Leia mais</a>
        <hr>
            <small>Data: {{#formatDate date}}{{/formatDate}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
    </div>
</div>
{{else}}
    <h5> Nenhuma Postagem</h5>
{{/each}}
