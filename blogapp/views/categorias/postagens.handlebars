{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Lista de Postagens por Categoria selecionada</h3>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Título: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <p>Conteúdo: {{conteudo}}</p>
            <small>Data: {{#formatDate date}}{{/formatDate}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma Postagem</h4>
{{/each}}