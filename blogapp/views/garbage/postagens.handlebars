{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="postagem/{{slug}}" class="btn btn-info">Leia mais</a>
         <hr>
        <small>Data: {{#formatDate date}}{{/formatDate}}</small><br>
        <small>Categoria: {{postagem.categorias.nome}}</small><br>
    </div>
</div>
{{else}}
    <h5> Nenhuma Postagem</h5>
{{/each}}