    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body">
    <form action="/admin/postagens/nova" method="POST">
    <label for="titulo">Título: </label>
        <input type="text" id="titulo" name="titulo" placeholder="Nome do Titulo" class="form-control" required>
        <br>
    <label for="slug">slug: </label>
        <input type="text" id="slug" name="slug" placeholder="Nome do slug" class="form-control" required>
        <br>
    <label for="descricao">slug: </label>
        <input type="text" id="descricao" name="descricao" placeholder="Descrição" class="form-control" required>
        <br>
    <label for="conteudo">Conteúdo: </label><br>
        <textarea name="conteudo"></textarea><br>
    <label for="categoria">Categoria: </label><br>
    <select class="custom-select" name="categoria">
        {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option><br>
        {{else}}
            <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
    </select><br>
    <button type="submit" class="btn btn-success mt-4">Criar Postagem</button>
</form>
</div>
</div>